@using SM.Domain.Model;
@model DeliveryPersonVM
@{
    bool alterando = Context.Request.RouteValues.ContainsKey("id");
    if (alterando)
        ViewBag.Subtitulo = "Alteração de Motoboy";
    else
        ViewBag.Subtitulo = "Cadastro de Motoboy";
}
<header class="d-flex justify-content-between align-items-center bg-green-100 mt-3">
<h1>@ViewBag.Subtitulo</h1>
<hr>
</header>

<div asp-validation-summary="ModelOnly" class="val-summary text-danger mb-3"></div>

<form asp-action="Create" class="row">
    <input type="hidden" asp-for="@Model.Id">
    <div class="form-group col-sm-8 col-lg-4 col-xl-3">
        <label asp-for="@Model.FullName"></label><br>
        <input asp-for="@Model.FullName" class="form-control" autofocus autocomplete="off" oninput="this.value = capitalizeWords(this.value)" maxlength="120">
        <span asp-validation-for="@Model.FullName" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-6 col-lg-3 col-xl-2">
        <label asp-for="@Model.NumberCNPJ"></label><br>
        <input asp-for="@Model.NumberCNPJ" class="form-control" autocomplete="off" placeholder="00.000.000/0000-00" maxlength="18" oninput="maskCNPJ(this)">
        <span asp-validation-for="@Model.NumberCNPJ" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-6 col-lg-3 col-xl-2">
        <label asp-for="@Model.NumberCNH"></label><br>
        <input asp-for="@Model.NumberCNH" class="form-control" autocomplete="off" maxlength="11">
        <span asp-validation-for="@Model.NumberCNH" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-4 col-xl-3">
        <label asp-for="@Model.TypeCNH"></label><br>
        <select asp-for="TypeCNH" class="form-select" aria-label="Select">
            <option selected disabled>Selecione</option>
            @foreach (var item in ViewBag.TypeCNH)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </div>
    <div class="form-group col-sm-6 col-lg-3 col-xl-2">
        <label asp-for="@Model.UrlImageCNH"></label><br>
        <input asp-for="@Model.UrlImageCNH" class="form-control" autocomplete="off" type="file">
        <span asp-validation-for="@Model.UrlImageCNH" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
</form>