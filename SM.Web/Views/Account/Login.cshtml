@using SM.Domain.ViewModel
@model LoginVM
@{
    var returnUrl = "";
    ViewBag.Subtitulo = "Login de Usu√°rio";
    if (Context.Request.Query.ContainsKey("returnUrl"))
    {
        returnUrl = Context.Request.Query["returnUrl"].ToString();
    }
}

<header class="d-flex justify-content-between bg-green-100 mt-3">
    <div class="p-2">
        <h3>
            <svg xmlns="http://www.w3.org/2000/svg" width="2.2rem" height="2.2rem" viewBox="0 0 24 24"><path fill="none" stroke="currentColor" d="M18.5 20.247V16S16 14.5 12 14.5S5.5 16 5.5 16v4.247M1.5 12C1.5 6.201 6.201 1.5 12 1.5S22.5 6.201 22.5 12S17.799 22.5 12 22.5S1.5 17.799 1.5 12Zm10.426.5S8.5 10.68 8.5 8c0-1.933 1.569-3.5 3.504-3.5A3.495 3.495 0 0 1 15.5 8c0 2.68-3.426 4.5-3.426 4.5z" /></svg>
            @ViewBag.Subtitulo
        </h3>
    </div>
</header>
<div asp-validation-summary="ModelOnly" class="validation-summary text-danger mb-3"></div>
<partial name="_MensagemPartial" />
<div class="d-flex justify-content-center align-items-center h-100">
    <div class="mt-5">
        <form asp-action="Login" class="col">
            <input type="hidden" name="ReturnUrl" id="ReturnUrl" value="@returnUrl">
            <div class="form-group mb-3">
                <label asp-for="@Model.User"></label><br>
                <input asp-for="@Model.User" class="form-control" autofocus autocomplete="off">
                <span asp-validation-for="@Model.User" class="text-danger"></span>
            </div>
            <div class="w-100"></div>
            <div class="form-group mb-3">
                <label asp-for="@Model.Password"></label><br>
                <input asp-for="@Model.Password" class="form-control">
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="w-100"></div>
            <div class="mt-3">
                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">Voltar</a>
                <button class="btn btn-primary" type="submit">Entrar</button>
            </div>
            <div class="w-100"></div>
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="@Model.Remember" class="form-check-input">
                    <label asp-for="@Model.Remember" class="form-check-label"></label><br>
                    <span asp-validation-for="@Model.Remember" class="text-danger"></span>
                </div>
            </div>
        </form>
        <p>
            Esqueceu sua senha? <a asp-action="EsqueciSenha">Clique aqui</a> para redefini-la.
        </p>
    </div>
</div>