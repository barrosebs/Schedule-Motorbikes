@using SM.Domain.ViewModel
@model ResetPasswordVM
@{
    ViewBag.Subtitulo = "Criar de Senha";
}
<header class="d-flex justify-content-between align-items-center">

    <h1 class="text-primary"><i class="fa-solid fa-key"></i> @ViewBag.Subtitulo</h1>
<hr>
</header>
<partial name="_MensagemPartial" />

<div asp-validation-summary="ModelOnly" class="val-summary text-danger my-3"></div>

<form asp-action="ResetPassword" class="row">
    <input type="hidden" asp-for="@Model.Token">
    <input type="hidden" asp-for="@Model.Email">

    <div class="w-100 mt-3"></div>
    <div class="form-group mb-3 col-4">
        <label asp-for="@Model.NewPassword"></label><br>
        <input asp-for="@Model.NewPassword" class="form-control">
    </div>
    <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>

    <div class="w-100 mt-3"></div>
    <div class="form-group mb-3 col-4">
        <label asp-for="@Model.NewPasswordConfirmation"></label><br>
        <input asp-for="@Model.NewPasswordConfirmation" class="form-control">
    </div>
    <span asp-validation-for="@Model.NewPasswordConfirmation" class="text-danger"></span>

    <div class="w-100"></div>
    <div class="mt-3">
        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">Cancelar</a>
        <button class="btn btn-primary" type="submit">Criar</button>
    </div>
</form>