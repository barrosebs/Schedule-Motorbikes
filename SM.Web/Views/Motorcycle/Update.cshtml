@using SM.Domain.Model
@model MotorcycleVM
@{
   ViewBag.Subtitulo = "Alteração Entregador";   
}
<header>
    <div>

<h2 class="text-primary">@ViewBag.Subtitulo</h2>
    </div>
</header>
<hr>

<div asp-validation-summary="ModelOnly" class="val-summary text-danger mb-3"></div>

<form asp-action="Update" class="row">
    <div class="form-group col-sm-8 col-lg-4 col-xl-3">
        <label asp-for="@Model.LicensePlate"></label><br>
        <input asp-for="@Model.LicensePlate" class="form-control" autofocus autocomplete="off" maxlength="7">
        <span asp-validation-for="@Model.LicensePlate" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-8 col-lg-4 col-xl-3">
        <label asp-for="@Model.Model"></label><br>
        <input asp-for="@Model.Model" class="form-control" autofocus autocomplete="off" disabled>
        <span asp-validation-for="@Model.Model" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-8 col-lg-4 col-xl-3">
        <label asp-for="@Model.Year"></label><br>
        <input asp-for="@Model.Year" class="form-control" autofocus autocomplete="off" disabled>
        <span asp-validation-for="@Model.Year" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
</form>