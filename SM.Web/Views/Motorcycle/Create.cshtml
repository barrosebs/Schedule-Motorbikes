@using SM.Domain.Model;
@model MotorcycleVM
@{
    bool alterando = Context.Request.RouteValues.ContainsKey("id");
    if (alterando)
        ViewBag.Subtitulo = "Alteração de Motoboy";
    else
        ViewBag.Subtitulo = "Cadastro de Motoboy";
}
<partial name="_MensagemPartial" />

<header class="d-flex justify-content-between align-items-center bg-blue-100 px-3 mt-3">
    <h1>@ViewBag.Subtitulo</h1>
    <hr>
</header>

<div asp-validation-summary="ModelOnly" class="val-summary text-danger mb-3"></div>
@using (Html.BeginForm("Create", "Motorcycle", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <input type="hidden" asp-for="@Model.Id">
    <div class="form-group col-sm-8 col-lg-4 col-xl-4">
        <label asp-for="@Model.LicensePlate"></label><i class="obrigatorio">*</i>
        <input asp-for="@Model.LicensePlate" class="form-control" autofocus autocomplete="off" maxlength="7" placeholder="XXX2222">
        <span asp-validation-for="@Model.LicensePlate" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-6 col-lg-3 col-xl-4">
        <label asp-for="@Model.Model"></label><i class="obrigatorio">*</i>
        <input asp-for="@Model.Model" class="form-control" autocomplete="off" maxlength="60" placeholder="CB500r 2024">
        <span asp-validation-for="@Model.Model" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-6 col-lg-3 col-xl-4">
        <label asp-for="@Model.Year"></label><i class="obrigatorio">*</i>
        <input asp-for="@Model.Year" class="form-control" autocomplete="off" maxlength="4" placeholder="2024">
        <span asp-validation-for="@Model.Year" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
}
