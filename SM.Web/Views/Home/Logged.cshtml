@using SM.Domain.Enum
@using SM.Domain.Models
@model Boolean
@{
    ViewData["Title"] = "Logado";
}
<partial name="_MensagemPartial" />

<main>
    <section class="destaque-principal">
        <div class="col-12 mt-5">
            <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 128 128"><path fill="#18cc00" d="M126.71 64c0 34.63-28.07 62.71-62.71 62.71c-34.63 0-62.71-28.08-62.71-62.71C1.29 29.36 29.37 1.29 64 1.29c34.64 0 62.71 28.07 62.71 62.71" /></svg>
            Seja bem-vindo ao sistema!
        </div>

    </section>

    <div>

        <ul class="h-100">
            @{

                if ((Context.User.Identity.IsAuthenticated && Context.User.IsInRole(ERole.Administrator.ToString())))
                {

                    <li class="mt-5">
                        <fieldset class="w-100 mb-0">
                            <legend>Área Usuário</legend>
                            <hr />
                            <ul>
                                <li>
                                    <div class="col-1 h-75 m-2 btn btn-danger bg-green-300 ">
                                        <a class="d-flex justify-content-center" style="color:aliceblue" asp-controller="User" asp-action="Create" title="Cadastro de Pacientes">
